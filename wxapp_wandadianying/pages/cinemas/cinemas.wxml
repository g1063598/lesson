<view class="container">
    <view class="page__hd">
        <text class="hd_city">南昌</text>
    </view>
    <view class="page__bd" wx:for="{{cinemas}}" wx:key="{{index}}">
        <view class="bd_item" bindtap="chooseCinema">
            <text class="item__store">{{item.cinema}}</text>
            <text class="item__position">{{item.position}}</text>
        </view>
    </view>
</view>